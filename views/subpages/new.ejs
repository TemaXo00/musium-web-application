<section class="released">
    <div class="released-container">
        <h1 class="released-container__title">Just Released</h1>
        <div class="released-container__card">
            <% if (releases && releases.length > 0) { %>
                <% releases.forEach((release, i) => { %>
                    <div class="released-item">
                        <div class="released-item__image">
                            <img src="<%= release.avatar_url || '/images/test-avatar.jpeg' %>" alt="<%= release.name %>" class="released-item__img">
                        </div>
                        <div class="released-item__track">
                            <p class="released-item__track-name"><%= release.name %></p>
                            <p class="released-item__genre"><%= release.genre_name %></p>
                        </div>
                        <div class="released-item__artist">
                            <p class="released-item__artist-name"><%= release.author_name %></p>
                            <p class="released-item__date"><%= formatDate(release.created_at) %></p>
                        </div>
                        <div class="released-item__buttons">
                            <a href="/entity/<%= release.id %>" target="_blank" class="released-item__buttons-play">
                                <img src="/images/button-play.png" alt="Play">
                            </a>
                        </div>
                    </div>
                <% }); %>
            <% } else { %>
                <p class="no-data">No new releases available</p>
            <% } %>
        </div>
    </div>
</section>

