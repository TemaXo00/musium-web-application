<section class="error">
    <div class="error__container">
        <div class="error__content">
            <div class="error__header">
                <h1 class="error__code">
                    <%= error.status  %>
                </h1>
                <div class="error__icon">Oops!</div>
            </div>

            <h2 class="error__title">
                <%= message %>
            </h2>

            <p class="error__message">
                <% if (error.status == 404) { %>
                    The page you are looking for might have been removed or is temporarily unavailable.
                <% } else { %>
                    Something went wrong on our end. Please try again later.
                <% } %>
            </p>

            <div class="error__actions">
                <button class="error__button error__button--primary" onclick="history.back()">
                    <span class="error__button-text">Go Back</span>
                </button>

                <a href="/" class="error__button error__button--secondary">
                    <span class="error__button-text">Home Page</span>
                </a>
            </div>
        </div>
    </div>
</section>
